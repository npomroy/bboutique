<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2 class="text-center">Edit Product</h2>
            <div class="well">
                <%= form_for @product, url: product_path do |f| %>
                  <div class="field form-group">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, class: 'form-control' %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :price %><br />
                    <%= f.text_field :price, class: 'form-control' %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :picture_url %><br />
                    <%= f.text_field :picture_url, class: 'form-control' %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :comments %><br />
                    <%= f.text_area :comments, class: 'form-control' %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :christmas %><br />
                    <%= f.radio_button :christmas, class: 'form-control' %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :clothing %><br />
                    <%= f.radio_button :clothing, class: 'form-control' %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :in_stock %><br />
                    <%= f.radio_button :in_stock, class: 'form-control' %>
                  </div>
                
                  <div class="actions form-group">
                    <%= f.submit "Update", class: 'btn btn-success' %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>