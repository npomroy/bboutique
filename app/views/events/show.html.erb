<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">
                <h3><%= @event.name %></h3>
                <h5>Starts at: <%= @event.startdate %></h5>
                <div class="well">
                    <p><%= @event.details %></p>
                </div>
                <% if user_signed_in? && current_user.admin %>
                    <%= link_to edit_event_path(params[:id]), class: "btn btn-primary" do %>
                        <i class="fa fa-edit"></i>
                    <% end %>
                    <%= link_to event_path(params[:id]), method: :delete, class: "btn btn-danger" do %>
                        <i class="fa fa-trash"></i>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>