<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">
                <h2 class="text-center"><%= @pattern.name %></h2>
            </div>
            <% if user_signed_in? && current_user.admin %>
                <%= link_to edit_pattern_path(params[:id]), class: "btn btn-primary" do %>
                    <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to pattern_path(params[:id]), method: :delete, class: "btn btn-danger" do %>
                    <i class="fa fa-trash"></i>
                <% end %>
            <% end %>
        </div>
    </div>
</div>